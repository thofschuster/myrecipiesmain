<p>
  <h1><%= @recipe.name %>></h1>
</p>
<div class="col-md-4 pull-right center">
  <%= gravatar_for @recipe.chef, size: 200 %>
  <p>
    <h5>Brought to you by: <%= @recipe.chef.name %></h5>
  </p>
</div>
<div class="col-md-8">
  <h3><%= @recipe.summary %></h3>
  <div class="well">
    <p>
      <strong>Steps:</strong>
    </p>
    <%= @recipe.description %>
  </div>
</div>
<h5><%= link_to 'Return to Recipes Listing', recipes_path, class: "btn btn-warn btn-small" %></h5>
